<h1>Listing flights</h1>

<table>
  <tr>
    <th>Number</th>
    <th>Departs at</th>
    <th>Arrives at</th>
    <th>Miles</th>
    <th>Duration</th>
    <th>Seats</th>
    <th>Arrival airport</th>
    <th>Departure airport</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @flights.each do |flight| %>
  <tr>
    <td><%= flight.number %></td>
    <td><%= flight.departs_at %></td>
    <td><%= flight.arrives_at %></td>
    <td><%= flight.miles %></td>
    <td><%= flight.duration %></td>
    <td><%= flight.seats %></td>
    <td><%= flight.arrival_airport_id %></td>
    <td><%= flight.departure_airport_id %></td>
    <td><%= link_to 'Show', flight %></td>
    <td><%= link_to 'Edit', edit_flight_path(flight) %></td>
    <td><%= link_to 'Destroy', flight, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

