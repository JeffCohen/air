<h1>Listing flights</h1>

 <div class="container">
    <!-- Example row of columns -->
    <div class="row">
      <div class="span12">
        <h1 class="page-header">Today's Flight Schedule</h1>
        <table class="table table-hover">
          <thead>

            <tr>
              <th>Flight #</th>
              <th>From</th>
              <th>Departs</th>
              <th>To</th>
              <th>Arrives</th>
              <th>Miles</th>
              <th>Duration</th>
              <th>Seats</th>
              <th></th>
            </tr>
          </thead>
          <tbody>

            <% @flights.each do |flight| %>
              <tr>
                <td><%= flight.number %></td>
                <td><%= flight.departure_airport.try(:code) %></td>
                <td><%= flight.departs_at.strftime('%l:%M %p') %></td>
                <td><%= flight.arrival_airport.try(:code) %></td>
                <td><%= flight.arrives_at.strftime('%l:%M %p') %></td>
                <td><%= flight.miles %></td>
                <td><%= flight.minutes %></td>
                <td><%= flight.seats %></td>
                <td><a class="btn btn-success">Book Now</a></td>
              </tr>
            <% end %>



</table>

<br />

<%= link_to 'New Flight', new_flight_path %>
